<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.web.WebView?>

<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/8.0.92" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.noticeditorteam.noticeditor.controller.NoticeViewController">
    <items>
        <TabPane fx:id="tabPane">
            <Tab closable="false" text="%editor"> 
                <TextArea fx:id="editor" />
            </Tab>
         <Tab closable="false" onSelectionChanged="#onAttachsFocused" text="%attachments">
            <content>
               <ListView fx:id="attachsView" prefHeight="200.0" prefWidth="200.0">
                  <contextMenu>
                     <ContextMenu>
                       <items>
                           <MenuItem fx:id="exportAttachItem" mnemonicParsing="false" onAction="#handleContextMenu" text="%contextmenu.attachments.export" />
                           <MenuItem fx:id="deleteAttachItem" mnemonicParsing="false" onAction="#handleContextMenu" text="%contextmenu.attachments.delete" />
                       </items>
                     </ContextMenu>
                  </contextMenu>
               </ListView>
            </content>
         </Tab>
        </TabPane>
        <WebView fx:id="viewer" />
    </items>
</SplitPane>
